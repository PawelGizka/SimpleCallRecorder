<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="4dp"
        card_view:cardElevation="6dp"
        android:layout_margin="0dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="0dp">

            <ImageView
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:scaleType="fitXY"
                android:id="@+id/contacts_item_main_image"
                android:src="@drawable/defult_contact_image"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_margin="0dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Large Text"
                android:id="@+id/contacts_item_display_name_text"
                android:layout_alignTop="@+id/contacts_item_main_image"
                android:layout_toRightOf="@+id/contacts_item_main_image"
                android:layout_toEndOf="@+id/contacts_item_main_image"
                android:layout_marginLeft="8dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Medium Text"
                android:id="@+id/contacts_item_phone_text"
                android:layout_alignBottom="@+id/contacts_item_main_image"
                android:layout_alignLeft="@id/contacts_item_display_name_text"
                android:layout_toRightOf="@id/contacts_item_main_image"
                android:layout_toEndOf="@+id/contacts_item_main_image" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Large Text"
                android:id="@+id/textView2"
                android:textSize="18sp"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="4dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Medium Text"
                android:textSize="14sp"
                android:id="@+id/textView4"
                android:layout_alignBottom="@id/contacts_item_main_image"
                android:layout_alignRight="@id/textView2"/>


        </RelativeLayout>
    </android.support.v7.widget.CardView>

</RelativeLayout>
